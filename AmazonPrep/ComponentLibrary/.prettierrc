{
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.js",
                "*.tsx",
                "*.jsx"
            ],
            "options": {
                "semi": true,
                "htmlWhitespaceSensitivity": "ignore",
                "arrowParens": "avoid",
                "jsxBracketSameLine": true,
                "singleQuote": true,
                "jsxSingleQuote": true
            }
        },
        {
            "files": [
                "*.html"
            ],
            "options": {
                "htmlWhitespaceSensitivity": "strict"
            }
        },
        {
            "files": [
                "*.json"
            ],
            "options": {
                "trailingComma": "none",
                "singleQuote": false
            }
        },
        {
            "files": [
                "*.md"
            ],
            "excludeFiles": [
                "*.md"
            ]
        }
    ]
}